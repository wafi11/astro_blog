---
import { Image } from "astro:assets";
import Layouts from "../layouts/Layouts.astro";
import { GetDataTrending, Getdata, getByCategory, getTrending } from "./actions/get.astro";
import ContentMid from "../components/ContentMid"
import Content3 from "../components/Content3";
import Content4 from "../components/Content4";
import Content1 from "../components/Content1.astro";
const data = await GetDataTrending()
const populer = await GetDataTrending()
const hotNews = await getByCategory()
const Trending = await getTrending()

---
<Layouts title="Home Page">
      <Content1 data={data}  title={"Home Page"}/>
    <div class="grid grid-cols-5 gap-5 px-10 ">
      <ContentMid data={populer}/>
    </div>
    <div class="px-10">
      <Content3 data={hotNews} title="Hot News">
    </div>
    <div class="px-10 pt-[200px]">
      <Content4 data={Trending}/>
    </div>
</Layouts>