---
import {format} from 'date-fns'
const {data} = Astro.props

const filteredArticles = data.articles.filter((item) => {
        return item.author && item.content && item.description && item.publishedAt && item.title && item.url && item.urlToImage;
      });

---

<div class="grid grid-cols-5 gap-5 px-10  h-full pt-[50px]">
  <div class="col-span-3 h-fit w-full border-b-[1px] border-black pb-6">
    <img alt={filteredArticles[0].urlToImage} src={filteredArticles[0].urlToImage} width={1000} height={1000} class="object-cover h-[480px] w-full"/>
    <div class="flex flex-col justify-center gap-5">
        <div class="flex justify-center gap-10 pt-4  blog relative">
          <p>{filteredArticles[0].author}</p>
          <button class="w-[5px] h-[5px] absolute bg-black rounded-full top-7"></button>
          <p>{format(new Date(filteredArticles[0].publishedAt), "dd MMM yyyy")}</p>
        </div>
        <p class="text-center blog text-3xl">{filteredArticles[0].title}</p>
        <p class="text-md "> {filteredArticles[0].description}</p>
    </div>
    <div class="flex justify-between pt-5">
      <button class="text-black border-2 border-gray-300 hover:text-white hover:bg-gray-400 px-3 py-2">
        Read Now
      </button>
      <button class="text-black blog px-3 py-2">
        <span class="text-gray-400">
          {50}
          </span>
        Comments
      </button>
    </div>
  </div>
  <div class="col-span-2 h-fit w-full ">
    <div class="my-5 pt-5">
      <h1 class="text-2xl bebas font-semibold bg-black text-white w-fit p-2 ">
        Other Post
      </h1>
    </div>
    <img alt={filteredArticles[4].urlToImage} src={filteredArticles[1].urlToImage} width={1000} height={1000} class="object-cover h-[200px] w-full"/>
      <h1 class="text-4xl text-center blog py-5">{filteredArticles[1].title}</h1>
      <p class="text-md "> {filteredArticles[1].description}</p>

  </div>